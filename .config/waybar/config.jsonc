{
    "layer": "bottom",
    "position": "top",
    "height": 35,
    "exclusive": true,
    "gtk-layer-shell": true,
    "passthrough": false,
    "fixed-center": true,
    "reload_style_on_change": true,
    "margin": "0 2px",
    "modules-left": ["hyprland/workspaces", "tray"],
    "modules-center": ["custom/lyrics"],
    "modules-right": [
        "custom/docker",
        "custom/warp",
        // "cpu",
        // "memory",
        "network",
        "custom/pipewire",
        "custom/mic",
        "custom/awake",
        // "custom/update",
        "custom/wallpaper",
        "clock",
        "custom/notification",
        "custom/power",
    ],
    "custom/lyrics": {
        "return-type": "json",
        "format": "{icon}  {0}",
        "hide-empty-text": true,
        "format-icons": {
            "playing": "",
            "paused": "",
            "lyric": "",
            "music": "󰝚",
        },
        "exec-if": "which waybar-lyric",
        "exec": "waybar-lyric -qm 150 -f partial",
        "on-click": "waybar-lyric --toggle",
    },
    "custom/docker": {
        "interval": 2,
        "return-type": "json",
        "format": "{icon} {0}",
        "format-icons": [""],
        "exec-if": "! docker ps --quiet",
        "exec": "waybar-docker.nu",
    },
    "custom/warp": {
        "interval": 2,
        "format": "<span><small><sup> </sup></small></span>",
        "exec-if": "which warp-cli",
        "exec": "warp-cli status | grep 'Status update: Connected'",
        "on-click": "warp-cli disconnect",
        "tooltip": false,
    },
    "custom/update": {
        "interval": 3600,
        "signal": 8,
        "return-type": "json",
        "format": "{icon} {0}",
        "format-icons": "󰚰",
        "exec": "waybar-update.nu",
        "on-click": "kitty --class update-window waybar-update.nu --update;pkill -SIGRTMIN+8 waybar", // update system
    },
    "hyprland/workspaces": {
        "format": "<big>{icon}</big>",
        "format-icons": {
            "active": "<small><sup> </sup></small>",
            // "default": "",
            "empty": "<small><sup> </sup></small>",
        },
    },
    "hyprland/window": {
        "format": "{class}",
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 17,
        "spacing": 0,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "on-click-right": null,
        "ignore-list": ["Picture-in-Picture", "Picture in Picture", "Picture in picture", "ChatGPT"],
        "app_ids-mapping": {
            "vesktop": "discord",
            "equibop": "discord",
        },
    },
    "tray": {
        "show-passive-items": true,
        "spacing": 10,
    },
    "clock": {
        "format": "{:%I:%M%p}",
        "tooltip": false,
        "on-click": "gnome-calendar",
    },
    "network": {
        "interval": 5,
        "format-wifi": " {bandwidthTotalBytes}",
        "format-ethernet": " {bandwidthTotalBytes}",
        "format-linked": "󰛵 (No IP)",
        "format-disconnected": " ",
        "tooltip-format": "Upload Speed: {bandwidthUpBytes}\nDownload Speed: {bandwidthDownBytes}",
    },
    "cpu": {
        "format": " {usage}%",
        "tooltip": true,
        "interval": 1,
    },
    "memory": {
        "format": " <small><sup> </sup></small>{used:0.1f}GiB",
        "tooltip": true,
        "tooltip-format": "Ram: {percentage}% {used}/{total}GiB\nSwap: {swapPercentage}% {swapUsed}/{swapTotal}GiB",
    },
    "custom/notification": {
        "tooltip": false,
        "format": "<big>{icon}</big>",
        "format-icons": {
            "notification": "󰂚<span foreground='red'><small><sup>⬤</sup></small></span>",
            "none": "󰂚",
            "dnd-notification": "󰂛<span foreground='red'><small><sup>⬤</sup></small></span>",
            "dnd-none": "󰂛",
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true,
    },
    "custom/weather": {
        "interval": 2,
        "signal": 4,
        "return-type": "json",
        "format": "{icon} {0}",
        "format-icons": {
            "clear": "",
            "cloudy": "",
            "fog": "󰖑",
            "drizzle": "",
            "rain": "󰖗",
            "snow": "",
            "thunderstorm": "",
        },
        "exec-if": "which waytune",
        "exec": "waytune weather --unit c",
    },
    "custom/mic": {
        "interval": 1,
        "signal": 4,
        "return-type": "json",
        "format": "{icon}",
        "format-icons": {
            "normal": "",
            "muted": " ",
        },
        "exec": "waybar-mic.nu",
        "on-click": "waybar-mic.nu --toggle",
    },
    "custom/awake": {
        "interval": 1,
        "signal": 4,
        "format": " ",
        "tooltip-format": "Stay Awake is enabled",
        "exec": "echo awake",
        "exec-if": "! waybar-awake.nu --check",
        "on-click": "waybar-awake.nu --toggle",
    },
    "custom/pipewire": {
        "interval": 1,
        "signal": 4,
        "return-type": "json",
        "format": "{icon} {percentage}%",
        "format-icons": {
            "normal": ["", "", ""],
            "muted": " ",
        },
        "exec": "waybar-pipewire.nu",
        "on-click": "pavucontrol",
        "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SINK@ '2%+'",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ '2%-'",
    },
    "custom/wallpaper": {
        "tooltip-format": "Change wallpaper",
        "on-click": "hyprctl dispatch exec waypaper",
        // Fixes Nerdfont width: add half with space
        "format": "",
    },
    "custom/power": {
        "tooltip-format": "Open Power Menu",
        "on-click": "wlogout -p layer-shell -b 2 &",
        // Fixes Nerdfont width: add half with space
        "format": "<span><small><sup> </sup></small></span>",
    },
}
